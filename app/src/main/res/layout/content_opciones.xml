<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_opciones"
    tools:context="com.example.manuel.doctorpaciente.controllers.OpcionesActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/logo_doc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctores"
        android:id="@+id/btnDoctores"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnDoctorPaciente"
        android:layout_alignEnd="@+id/btnDoctorPaciente"
        android:layout_alignLeft="@+id/btnDoctorPaciente"
        android:layout_alignStart="@+id/btnDoctorPaciente" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pacientes"
        android:id="@+id/btnPacientes"
        android:layout_below="@+id/btnDoctores"
        android:layout_alignRight="@+id/btnDoctores"
        android:layout_alignEnd="@+id/btnDoctores"
        android:layout_alignLeft="@+id/btnDoctores"
        android:layout_alignStart="@+id/btnDoctores" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor-Paciente"
        android:id="@+id/btnDoctorPaciente"
        android:layout_below="@+id/btnPacientes"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
